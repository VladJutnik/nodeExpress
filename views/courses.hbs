
<h1>{{title}}</h1>
{{#if courses.length}}
{{#each courses}}
    <div class="row">
        <div class="col s6 offset-3">
            <div class="card">
                  <div class="card-image">
                      <img src="{{img}}" alt="{{title}}">
                  </div>
                  <div class="card-content">
                      <span class="card-title">{{title}}</span>
                      <p class="price">{{price}}</p>
                  </div>
                  <div class="card-action">
                      <a href="/courses/{{id}}" target="_blank">Просмотр</a>
                      <a href="/courses/{{id}}/edit?allow=true">Внести изменения</a>
                  </div>
            </div>
        </div>
    </div>
{{/each}}
<pre>{{courses}}</pre>
{{else}}
<p>Курсов нет</p>
{{/if}}